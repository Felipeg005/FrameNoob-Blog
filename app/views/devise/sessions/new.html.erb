<h2 class="text-sign-login">Log in</h2>
<div class="login-container">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, class: "login-field", placeholder: "Username(Email)", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, class: "login-field", placeholder: "Password", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Log in", class: "submit-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
