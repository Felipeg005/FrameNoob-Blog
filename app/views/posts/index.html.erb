<h1>Here is a list of posts all posts for the user</h1>

<div class="users-container">
  <img class="user-photo" src=""><br>
  <h2><%= User.find(params[:id]).name %></h2><br>
  <p class="text-usercard-index">Number of Posts: <%= User.find(params[:id]).posts_counter %></p><br><br>
</div>
 <% @posts.each_with_index do |post, index| %>
  <div class="posts-container">
    <div class="posts-title-container">
      Post #<%= index + 1 %>:<br><br>
      Title: <%= post.title %><br><br>
      <%= post.text %><br>
    </div>
    <p class="post-footer-text">comments:<%= post.comments_counter %> likes:<%= post.likes_counter %></p><br><br>
  </div>
    <% post.comments.each_with_index do |comment, index| %>
    <div class="comments-container">
    <p class="comments-text"><%= User.find(comment.author_id).name %>:  <%= comment.text %> //  comment #<%= index + 1 %></p>
  </div>
  <% end %>
<% end %>