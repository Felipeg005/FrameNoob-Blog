<h1>Here is a list of posts all posts for the user</h1>

<a href="/users/<%= @user.id %>"><div class="see-all-posts-btn"><button>Go Back</button></div></a>
<div class="users-container">
  <img class="user-photo" src=""><br>
  <h2><%= @user.name %></h2><br>
  <p class="text-usercard-index">Number of Posts: <%= @user.posts_counter %></p><br><br>
</div>
 <% @user.posts.each_with_index do |post, index| %>
<a href="/users/<%= @user.id %>/posts/<%= post.id %>">
  <div class="posts-container">
    <div class="posts-title-container">
      Post #<%= post.id %>:<br><br>
      Title: <%= post.title %><br><br>
      <%= post.text %><br>
    </div>
    <p class="post-footer-text">comments:<%= post.comments_counter %> likes:<%= post.likes_counter %></p><br><br>
  </div>
</a>
    <% post.comments.each_with_index do |comment, index| %>
    <div class="comments-container">
    <p class="comments-text"><%= User.find(comment.author_id).name %>:  <%= comment.text %> //  comment #<%= index + 1 %></p>
  </div>
  <% end %>
<% end %>